{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "eo/accordion",
	"version": "1.0.0",
	"title": "Accordion",
	"category": "design",
	"icon": "smiley",
	"description": "Display accordion block",
	"example": {},
  	"attributes": {
		"titleTag": {
			"type": "string",
			"default": "h2"
		},
		"title" : {
			"type": "string"
		},
		"subtitle": {
			"type": "string"
		},
		"isOpened": {
			"type": "boolean",
			"default": false
		}
  	},
	"supports": {
		"color": {
			"background": "true",
			"color": "true"
		},
		"spacing": {
			"margin": true,
			"padding": false,
			"blockGap": false
		},
		"shadow": true,
		"html": false,
		"__experimentalBorder": {
			"color": true,
			"radius": true,
			"style": true,
			"width": true,
			"__experimentalDefaultControls": {
				"color": true,
				"radius": true,
				"style": true,
				"width": true
			}
		}
	},
	"textdomain": "accordion",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": [ "file:./style-index.css", "dashicons" ],
  	"render": "file:./render.php",
	"viewScript": "file:./view.js"
}
